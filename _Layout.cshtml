<!DOCTYPE html>
<html>
    <head>
        <title>@Page.Title</title>
        <script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js"></script>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <!-- Optional theme -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
        <!-- Latest compiled and minified JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
        @RenderSection("head", required: false)
    </head>
    <body>
        <nav class="navbar navbar-light bg-faded">
            <a class="navbar-brand" href="#">Car Store</a>
            <ul class="nav navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="CarsContentPage.cshtml">Cars List</a>
                </li>
                <li class="nav-item active">
                    <a id="new_car" class="nav-link" href="CarNewContentPage.cshtml">Add New Car</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="LoginContentPage.cshtml">Admin Login</a>
                </li>
            </ul>
        </nav>
        @RenderBody()
        <script type="text/javascript">
            function loginedID() {
                var id = sessionStorage.getItem('user_id');
                return id;
            }

            $('#new_car').click(function (event) {
                var id = loginedID();
                if (id > 0) {
                    $("#new_car").attr("href", "CarNewContentPage.cshtml?user_id=" + id);
                }
            });

        </script>

        </body>
    </html>
